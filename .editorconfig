root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.scss]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 4

[*.html]
indent_style = space
indent_size = 2

[*.{json, json.dist}]
indent_size = 2

[*.vim]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yml, yaml}]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4
